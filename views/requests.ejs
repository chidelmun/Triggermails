<script type="text/javascript">
  $(function(){
    
    $('#profile').hide();
    $('#user_profile').click(function(){
        $('#email_list').hide(500);
        $('#profile').fadeIn(500);
    });

    $('#my-file-selector').change(function(){
        $('#photo_upload').submit();
    });

    // Autocomplete
   $("#auto").autocomplete({
        source: "http://localhost:3000/users/api/v1/data/users",
        minLength: 1
    });

  
});
