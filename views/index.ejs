	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>
  <body>   
    	<div class="container">
    	<h1><%= title %></h1>
    	<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="/">Wakku Inbox</a>
		    </div>
		    <ul class="nav navbar-nav">
		      <li><a href="#">Sent Messages</a></li>
		      <li><a href="#">Archives</a></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		    	<li><a id="user_profile" href="/#profile"><span class="glyphicon glyphicon-user"></span> <%= data.display_name %> </a></li>
      			<li><a href="#"><span class="glyphicon glyphicon-envelope"></span> <%= emails.length%></a></li>
      			<li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout </a></li>
		     
		    </ul>
		  </div>
		</nav>	
    	</div>



  <div class="container">
  <button class="text-success"> <a style="text-decoration: none;" href="/new">  New Message </a> </button> <br><br>
  	<!-- <ul class="nav nav-tabs">
	    <li class="active"><a data-toggle="tab" href="#home">From</a></li>
	    <li><a data-toggle="tab" href="#menu1">To</a></li>
	    <li><a data-toggle="tab" href="#menu2">Subject</a></li>
	    <li><a data-toggle="tab" href="#menu3">Flag</a></li>
	  </ul> -->	 
</div>

<div id="email_list" class="container">
<table class="table table-hover">
    <thead>
      <tr>
        <th>From</th>
        <th>To</th>
        <th>Subject</th>
      </tr>
    </thead>
    <tbody>

    <% for(var i=0 ; i < emails.length ; i++) { %>
      <tr>
      	<td><%= emails[i].display_name %></td>
        <td><%= emails[i].dest %></td>
        <td><%= emails[i].subject %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<div id="profile" class="container">

  <div class="row">
        <div class="col-md-6">
    
         <div class="panel panel-default">
        <div class="panel-body">
                  <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <h2><%= data.display_name %></h2>
                            <p><strong>Email: </strong> <%= data.email %> </p>
                            <p><strong>Hobbies: </strong> Read, out with friends, listen to music, draw and learn new things. </p>
                            
                        </div><!--/col-->          
                        <div class="col-xs-12 col-sm-4 text-center">
                                <img src="/images/photos/<%= data.display_name.replace(' ', '').toLowerCase() + '.jpg' %>" alt="" class="center-block img-circle img-responsive">
                                <ul class="list-inline ratings text-center" title="Ratings">
                                  <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
                                  <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
                                  <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
                                  <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
                                  <li><a href="#"><span class="fa fa-star fa-lg"></span></a></li>
                                </ul>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                        <form id="photo_upload" method="post" action="/upload" encType="multipart/form-data"> 
                          <label class="btn btn-info btn-block" for="my-file-selector">
                          <input name="photo" id="my-file-selector" type="file" style="display:none;">
                           <strong id="text"> Edit Profile Photo </strong>
                           </label>
                        </form>
                        </div>
                   </div><!--/row-->
              </div><!--/panel-body-->
          </div><!--/panel-->    
    </div>
  </div>
  

</div>

<script type="text/javascript">
  $(function(){

    $('#profile').hide();
    $('#user_profile').click(function(){
        $('#email_list').hide(500);
        $('#profile').show(500);
    });

    $('#my-file-selector').change(function(){
        $('#photo_upload').submit();
    });
   

});
</script>





  </body>
</html>
